#include <stdio.h>
void main (){
  float altura, media=0, maior=0;
  int i=0, j=0, soma=0;
  for (i=1;i<=20;i++){
    printf("Digite a altura: \n");
    scanf ("%f", &altura);
    soma+=altura;
    if (altura > 2.00){
      j++;
    }
    if (altura > maior){
      maior = altura;
    }
  }
  media=soma/i;
  printf("A maior altura do grupo é: %.2f \n", maior);
  printf("O número de pessoas com mais de 2 metros é: %d" \n, j);
  printf("A media de altura é: %.2f \n", media);
}
